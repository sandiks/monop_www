<%= t 'register' %>

<% if flash[:error] %>
<div class="error" id="flash">
	<%= flash[:error] %>
</div>
<% end %>

<% form_tag  url(:account,:create), :method=>:post, :class => 'form-inline well'  do  %>
<div class="col-md-3">
	<%= text_field_tag :name,  :class => 'form-control', :placeholder => "Name" %>
</div>
<div class="col-md-3">
	<%= password_field_tag :password ,  :class => 'form-control', :placeholder => "Password" %>
</div>
<%= submit_tag "#{t "create"}" %>
<% end %>

