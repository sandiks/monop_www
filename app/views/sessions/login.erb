<div class="error" id="flash">
  <%= flash[:error] %>
</div>

<% form_tag  url(:sessions,:login), :method=>:post, :class => 'form-inline well'  do  %>
<div class="col-md-3">
	<%= text_field_tag :name,  :class => 'form-control', :placeholder => "Name" %>
</div>
<div class="col-md-3">
	<%= password_field_tag :password ,  :class => 'form-control', :placeholder => "Password" %>
</div>
<div class="checkbox">
	<label>
		<input type="checkbox"> Remember me
	</label>
</div>
<button type="submit" class="btn btn-default">Sign in</button>
<% end %>
<%= link_to "#{t "create"}", url_for(:account, :new) %>